
[Unit]
Description=Clinical Trials Chatbot (Gunicorn)
After=network.target

[Service]
User=ubuntu
Group=ubuntu
WorkingDirectory=/home/ubuntu/chatbot/app
EnvironmentFile=/etc/ctchat.env
ExecStart=/home/ubuntu/chatbot/app/.venv/bin/gunicorn -w 2 -b 127.0.0.1:8000 app:app
Restart=always
AmbientCapabilities=CAP_NET_BIND_SERVICE
LimitNOFILE=65535

[Install]
WantedBy=multi-user.target
